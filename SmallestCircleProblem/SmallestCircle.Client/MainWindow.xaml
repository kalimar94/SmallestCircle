<Window x:Class="SmallestCircle.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmallestCircle.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="245" Margin="33,24,0,0" VerticalAlignment="Top" Width="448">
            <Border BorderBrush="Black" BorderThickness="2">
            </Border>
            <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="14" Margin="147,70,0,0" Stroke="Black" VerticalAlignment="Top" Width="12"/>
            <TextBox x:Name="InputX" TextWrapping="Wrap" Text="Enter X" Margin="60,260,311,-44" TextChanged="InputX_TextChanged"/>
            <TextBox x:Name="InputY" TextWrapping="Wrap" Text="Enter Y" Margin="231,260,137,-45"/>
        </Grid>
        <Button x:Name="button" Content="Submit" HorizontalAlignment="Left" Height="23" Margin="378,286,0,0" VerticalAlignment="Top" Width="103" Click="button_Click"/>
    </Grid>
</Window>
