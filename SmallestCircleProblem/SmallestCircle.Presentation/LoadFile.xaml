<UserControl x:Class="SmallestCircle.Presentation.LoadFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmallestCircle.Presentation"
             mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="#FF0000" BorderThickness="1" Margin="0,0,0,29">
            <Grid Name="DrawingArea" >
            </Grid>
        </Border>
        <TextBox x:Name="UploadText" Height="28" Margin="170,352,69,0" TextWrapping="Wrap" VerticalAlignment="Bottom" TextChanged="textBox_TextChanged"/>
        <Button x:Name="Upload" Content="Open File" Height="28" Margin="0,0,4,0" VerticalAlignment="Bottom" Width="65" Click="Upload_Click" HorizontalAlignment="Right"/>
        <Button x:Name="Calculate" Content="Calculate" Height="28" Margin="0,352,433,0" VerticalAlignment="Bottom" Width="80" Click="Calculate_Click" HorizontalAlignment="Left"/>
        <Button x:Name="Clear" Content="Clear" Height="28" Margin="85,352,348,0" VerticalAlignment="Bottom" Width="80" Click="Clear_Click" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
