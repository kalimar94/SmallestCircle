<UserControl x:Class="SmallestCircle.Presentation.LoadFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmallestCircle.Presentation"
             mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="#FF0000" BorderThickness="1" Margin="0,0,1,49">
            <Grid Name="DrawingArea" Margin="0,0,0,-1" >
            </Grid>
        </Border>
        <Button x:Name="Upload" Content="Open File" Height="24" Margin="449,327,-1,0" VerticalAlignment="Top" Width="65" Click="Upload_Click"/>
        <TextBox x:Name="UploadText" Height="24" Margin="0,328,69,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="444" TextChanged="textBox_TextChanged"/>
        <Button x:Name="Calculate" Content="Calculate" Height="24" Margin="0,352,0,0" VerticalAlignment="Top" Width="80" Click="Calculate_Click"/>
        <Button x:Name="Clear" Content="Clear" Height="24" Margin="93,352,340,0" VerticalAlignment="Top" Width="80" Click="Clear_Click"/>
</Grid>
</UserControl>
