<UserControl x:Class="SmallestCircle.Presentation.ScratchPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmallestCircle.Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="0,0,0,30">
        <Border BorderBrush="#FF0000" BorderThickness="1" Margin="0,0,0,3">
            <Canvas Name="DrawingArea" MouseLeftButtonUp="DrawingArea_MouseLeftButtonUp" Background="Transparent" Margin="0,0,0,-42" />
        </Border>
        <Button x:Name="ClearBtn" Content="Clear" Height="28" Margin="10,0,171,-30" MaxWidth="2000" VerticalAlignment="Bottom" Click="ClearBtn_Click" />
        <Button x:Name="ExportBtn" Content="Export Points" Height="28" Margin="170,0,0,-30" VerticalAlignment="Bottom" Click="ExportBtn_Click" MaxWidth="500" Width="130" HorizontalAlignment="Right" />
    </Grid>
</UserControl>
