<UserControl x:Class="SmallestCircle.Presentation.ScratchPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmallestCircle.Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="0,0,0,30">
        <Canvas Name="DrawingArea" MouseLeftButtonUp="DrawingArea_MouseLeftButtonUp" Background="Transparent" />
        <Button x:Name="ClearBtn" Content="Clear" Height="28" Margin="10,0,171,-30" MaxWidth="600" VerticalAlignment="Bottom" Click="ClearBtn_Click" />
        <Button x:Name="ExportBtn" Content="Export Points" Height="28" Margin="0,0,10,-30" VerticalAlignment="Bottom" Click="ExportBtn_Click" MaxWidth="300" HorizontalAlignment="Right" Width="130" />
    </Grid>
</UserControl>
